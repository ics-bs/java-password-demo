<?xml version="1.0" encoding="UTF-8"?>

<!-- Import necessary JavaFX components -->
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Pos?>

<!-- Root container: Vertical layout with spacing and center alignment -->
<VBox 
    xmlns="http://javafx.com/javafx" 
    xmlns:fx="http://javafx.com/fxml"
    spacing="20"
    alignment="CENTER"
    style="-fx-padding: 40; -fx-background-color: #f3f4f6;"
    fx:controller="se.lu.ics.controllers.LoginDialogController"
>

    <!-- Title -->
    <Label 
        text="Login" 
        style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1f2937;"
    />

    <!-- Username Input -->
    <TextField 
        fx:id="textFieldUsername"
        promptText="Enter your username"
        maxWidth="300"
        style="-fx-font-size: 14px; -fx-padding: 5;"
    />

    <!-- Password Input -->
    <PasswordField 
        fx:id="passwordFieldUserPassword"
        promptText="Enter your password"
        maxWidth="300"
        style="-fx-font-size: 14px; -fx-padding: 5;"
    />

    <!-- Login Button -->
    <Button 
        fx:id="buttonLogin"
        text="Log In"
        maxWidth="300"
        style="-fx-font-size: 16px; -fx-background-color: #3b82f6; -fx-text-fill: white;"
        onAction="#handleButtonLoginAction"
    />

</VBox>